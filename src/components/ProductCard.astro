---
import ReactIcon from "../icons/ReactIcon.astro"
import TailwindIcon from "../icons/TailwindIcon.astro"
import FirebaseIcon from "../icons/FirebaseIcon.astro"
import ViteIcon from "../icons/ViteIcon.astro"
import PlayIcon from "../icons/PlayIcon.astro"

const { productImg, productTitle, productDesc } = Astro.props
---

<article
  class="max-w-xl h-auto flex justify-start items-center gap-x-4 mt-6 sm:mt-4 md:mt-6"
>
  <div class="w-full h-auto flex flex-col">
    <!-- Imagen arriba -->
    <div class="w-full h-auto">
      <div
        class="w-full h-auto rounded-3xl border border-gray-500 p-1 overflow-hidden"
      >
        <img
          src={productImg}
          alt="pos-screenshot"
          class="w-full h-auto object-cover"
        />
      </div>
    </div>

    <div class="flex flex-col gap-y-3 w-full mt-4">
      <div class="w-full h-auto flex justify-start items-center">
        <span
          class="text-xl font-bold pr-4 border-r-2 border-black"
          data-translate="posTitle"
        >
          POS - Point of Sale
        </span>
        <ul class="h-full flex items-center gap-x-1 ml-5">
          <div title="React">
            <ReactIcon />
          </div>
          <div title="Tailwind CSS">
            <TailwindIcon />
          </div>
          <div title="Firebase">
            <FirebaseIcon />
          </div>
          <div title="Vite">
            <ViteIcon />
          </div>
        </ul>
      </div>

      <p class="text-md mb-4" data-translate="posDescription">
        Welcome to <span class="text-lg font-semibold underline">Friday</span>,
        a modern, simple and intuitive POS system to have all your sales,
        reports, and more in one place. It is designed to be user-friendly and
        efficient, making it easy for you to manage your business operations.
      </p>

      <div class="w-full h-12 flex">
        <a
          class="w-60 flex p-3 border-2 text-black border-black rounded-lg hover:bg-[#e8af72] hover:text-white hover:border-0"
          href="#"
        >
          <PlayIcon class="w-5 h-5 inline-block ml-1" />
          <span
            class="flex-grow text-center font-semibold"
            data-translate="demo">Demo</span
          >
        </a>
      </div>
    </div>
  </div>
</article>
