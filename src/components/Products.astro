---
import ProductIcon from "../icons/ProductIcon.astro"
import posImg from "../assets/pos-photo.png"
import ProductCard from "../components/ProductCard.astro"

const productDescription = `Welcome to Friday, a modern, simple and intuitive POS system to have all your sales, reports, and more in one place. It is designed to be user-friendly and efficient, making it easy for you to manage your business operations.`
---

<section
  id="products-section"
  class="w-full h-auto grid place-content-center py-16 sm:py-4"
>
  <article
    class="max-w-xl h-8 flex justify-start items-center gap-x-4 mt-16 sm:mt-4 md:mt-8"
  >
    <div class="w-auto h-8">
      <ProductIcon />
    </div>
    <h2 class="text-2xl font-semibold" data-translate="products">Products</h2>
  </article>

  <article class="max-w-xl h-auto flex flex-col items-center">
    <ProductCard
      productImg={posImg.src}
      productTitle="POS - Point of Sale"
      productDesc={productDescription}
    />
  </article>
</section>
